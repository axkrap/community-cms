<form method="POST" action="{$login_target}">
    <table class="login">
            <tr>
                    <td>User:</td>
                    <td><input type="text" name="user" id="login_user" /></td>
            </tr>
            <tr>
                    <td>Pass:</td>
                    <td><input type="password" name="passwd" id="login_password" /></td>
            </tr>
            <tr>
                    <td>&nbsp;</td>
                    <td><input type="submit" value="Login!" id="login_button" /></td>
            </tr>
    </table>
</form>